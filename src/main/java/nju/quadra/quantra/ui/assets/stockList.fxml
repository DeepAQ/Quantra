<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDatePicker?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<fx:root maxHeight="1.7976931348623157E308" prefWidth="1000.0" stylesheets="@stockList.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="table" maxHeight="1.7976931348623157E308">
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label stylesheets="@textColor.css" text="双击列表中的某个股票可进入个股详情。">
               <graphic>
                  <MaterialDesignIconView fill="WHITESMOKE" glyphName="CHECKBOX_MARKED_OUTLINE" size="20" />
               </graphic>
               <HBox.margin>
                  <Insets right="150.0" />
               </HBox.margin>
            </Label>
            <Label stylesheets="@textColor.css" text="日期选择" />
            <JFXDatePicker fx:id="datePicker" stylesheets="@pickers.css" />
         </children>
      </HBox>
   </top>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</fx:root>
